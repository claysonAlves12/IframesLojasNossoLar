<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/imgs/LojasNossoLar.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/cronometro/Configuração Cronometro.css">
    <title>Cronômetro</title>


</head>
<body>

  <h1>Configurar Cronômetro</h1>

  <label for="hours">Horas:</label>
  <input type="number" id="hours" name="hours" min="0" placeholder="0" required>
  
  <label for="minutes">Minutos:</label>
  <input type="number" id="minutes" name="minutes" min="0" placeholder="0" required>
  
  <label for="seconds">Segundos:</label>
  <input type="number" id="seconds" name="seconds" min="0" max="59" placeholder="0" required>
  
  <br>

  <button onclick="setTimer()">Configurar Cronômetro</button>

  <script>
    function setTimer() {
  let formData = new FormData();
  formData.append('hours', document.getElementById('hours').value);
  formData.append('minutes', document.getElementById('minutes').value);
  formData.append('seconds', document.getElementById('seconds').value);

  fetch('/configurar-cronometro', {
    method: 'POST',
    body: formData,
    headers: {
      'Accept': 'application/json', // Indica que o cliente aceita JSON
    },
    redirect: 'follow' // Adicione esta linha
  })
  .then(response => {
    if (!response.ok) {
      throw new Error('Erro ao configurar o cronômetro');
    }

    return response.json();
  })
  .then(data => {
    console.log(data);
    // Lógica adicional conforme necessário
  })
  .catch(error => {
    console.error('Erro ao configurar o cronômetro:', error.message);

    if (error.response) {
      console.log('Response status:', error.response.status);
      console.log('Response text:', error.response.statusText);
    } else {
      console.log('Erro de resposta do servidor:', error);
    }
  });
}

  </script>

</body>
</html>
