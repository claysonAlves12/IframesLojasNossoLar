<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/imgs/LojasNossoLar.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/cronometro/Configuração Cronometro.css">
    <title>Exibir Cronômetro</title>
</head>
<body>

  <div id="countdown-display"></div>

  <script>
    var countdownInterval;

    function startCountdown(totalTimeInSeconds) {
      clearInterval(countdownInterval);
  
      var displayElement = document.getElementById("countdown-display");
  
      countdownInterval = setInterval(function() {
        var hoursRemaining = Math.floor(totalTimeInSeconds / 3600);
        var minutesRemaining = Math.floor((totalTimeInSeconds % 3600) / 60);
  
        displayElement.innerHTML = "Tempo Restante: " + hoursRemaining + " horas e " + minutesRemaining + " minutos";

        if (totalTimeInSeconds <= 0) {
          clearInterval(countdownInterval);
          displayElement.innerHTML = "Cronômetro zerado!";
        } else {
          // Decrementar o tempo restante
          totalTimeInSeconds--;
        }
      }, 1000); 
    }

    // Extrair os parâmetros da URL
    var urlParams = new URLSearchParams(window.location.search);
    var hours = urlParams.get('hours');
    var minutes = urlParams.get('minutes');

    // Se ambos os valores estiverem presentes, iniciar o cronômetro
    if (hours !== null && minutes !== null) {
      var totalTimeInSeconds = (parseInt(hours) * 3600) + (parseInt(minutes) * 60);
      startCountdown(totalTimeInSeconds);
    }
  </script>

</body>
</html>
